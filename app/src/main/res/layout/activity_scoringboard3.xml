<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="20"
    android:rowCount="20"
    tools:context=".scoringboard3">


    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="8"/>

    <TextView
        android:id="@+id/left_header_column"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_rowSpan="16"
        android:layout_column="0"
        android:text="     "/>

    <TextView
        android:id="@+id/obj_header"
        android:textSize="35sp"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="목표" />

    <TextView
        android:id="@+id/nb1"
        style="@style/btn"
        android:layout_row="2"
        android:layout_column="1"
        android:text="1" />

    <TextView
        android:id="@+id/nb2"
        style="@style/btn"
        android:layout_row="3"
        android:layout_column="1"
        android:text="2" />

    <TextView
        android:id="@+id/btn3"
        style="@style/btn"
        android:layout_row="4"
        android:layout_column="1"
        android:text="3" />

    <TextView
        android:id="@+id/btn4"
        style="@style/btn"
        android:layout_row="5"
        android:layout_column="1"
        android:text="4" />

    <TextView
        android:id="@+id/btn5"
        style="@style/btn"
        android:layout_row="6"
        android:layout_column="1"
        android:text="5" />

    <TextView
        android:id="@+id/btn21"
        style="@style/btn"
        android:layout_row="7"
        android:layout_column="1"
        android:text="6" />

    <TextView
        android:id="@+id/btn22"
        style="@style/btn"
        android:layout_row="8"
        android:layout_column="1"
        android:text="7" />

    <TextView
        android:id="@+id/btn23"
        style="@style/btn"
        android:layout_row="9"
        android:layout_column="1"
        android:text="8" />

    <TextView
        android:id="@+id/btn24"
        style="@style/btn"
        android:layout_row="10"
        android:layout_column="1"
        android:text="9" />

    <TextView
        android:id="@+id/btn25"
        style="@style/btn"
        android:layout_row="11"
        android:layout_column="1"
        android:text="10" />

    <TextView
        android:id="@+id/nb_mr"
        style="@style/Objectives"
        android:layout_row="12"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="메카톨 렉스" />

    <TextView
        android:id="@+id/nb_secret"
        style="@style/Objectives"
        android:layout_row="13"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="비밀 목표" />

    <TextView
        android:id="@+id/total"
        style="@style/Objectives"
        android:layout_row="14"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="점수 합"/>


    <TextView
        android:id="@+id/obj1"
        style="@style/Objectives"
        android:layout_row="2"
        android:layout_column="3"/>

    <TextView
        android:id="@+id/obj2"
        style="@style/Objectives"
        android:layout_row="3"
        android:layout_column="3"/>

    <TextView
        android:id="@+id/obj3"
        style="@style/Objectives"
