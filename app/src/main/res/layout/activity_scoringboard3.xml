        android:text="가가" />

    <TextView
        android:id="@+id/textView6"
        style="@style/players"
        android:layout_row="1"
        android:layout_column="8"
        android:text="가가" />

    <TextView
        android:id="@+id/textView7"
        style="@style/players"
        android:layout_row="1"
        android:layout_column="9"
        android:text="가가" />


</GridLayout>